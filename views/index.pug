extends layout

block content
  include mixins/restaurantCard
  div.container
    div.add-button-row
      a.button.save(href="/add") Add Restaurant
    each restaurant in restaurants
      +restaurantCard(restaurant)
      div.card
        div.card-header
          div.backdrop
          div.card-title=restaurant.name
          img.card-header-image(src=restaurant.image)
        div.card-body
          div.edit
            a(href='#') Edit
        div.card-details
          div.category Fast Food
          div.rating
              -for(let i = 0; i<restaurant.rating; i++)
                  span &#X2b50
        div.descrpition
          // note note
          | The greatest fast food in the world!
          | We will give you great deals.
          | For a great price.
          | Now dial 559-231-3232.
          | To get your awesome 1 for 3 burger deal now!